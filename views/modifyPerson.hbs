<p>View or edit the record of an individual resident or inhabitant.</p>

<form id="app">
  <a href="#" v-on:click="edit">Click here to edit.</a><br><br>
  <input type="hidden" id="_csrf" value="{{ csrfToken }}">
  <input type="hidden" id="_key" value="{{ key }}">

  <label for="lastName">Last Name:</label>
  <input type="text" v-model.lazy="info.lastName" v-on:input="uppercase" required disabled><br>

  <label for="firstName">First Name:</label>
  <input type="text" v-model.lazy="info.firstName" v-on:input="uppercase" required disabled><br>

  <label for="middleName">Middle Name:</label>
  <input type="text" v-model.lazy="info.middleName" v-on:input="uppercase" required disabled><br>

  <label for="extName">Ext Name:</label>
  <input type="text" v-model.lazy="info.extName" v-on:input="uppercase" required disabled><br>

  <label for="dob">Date of Birth:</label><br>
  <input type="date" max="{{ maxDate }}" v-model="info.dob" required disabled><br><br>

  <label for="placeOfBirth">Place of Birth:</label>
  <input type="text" v-model.lazy="info.placeOfBirth" v-on:input="uppercase" required disabled><br>

  <label for="sex">Sex:</label>
  <select v-model="info.sex" disabled>
    <option value="MALE">MALE</option>
    <option value="FEMALE">FEMALE</option>
  </select><br>

  <label for="maritalStatus">Marital Status:</label>
  <select v-model="info.maritalStatus" disabled> 
    <option value="SINGLE">SINGLE</option>
    <option value="MARRIED">MARRIED</option>
    <option value="WIDOWED">WIDOWED</option>
    <option value="SEPARATED">SEPARATED</option>
  </select><br>

  <label for="citizenship">Citizenship:</label>
  <input type="text" v-model.lazy="info.citizenship" v-on:input="uppercase" required disabled><br>

  <label for="occupation">Occupation:</label>
  <input type="text" v-model.lazy="info.occupation" v-on:input="uppercase" required disabled><br>

  <label for="houseAddressNum">House Number:</label>
  <input type="text" v-model.lazy="info.houseAddressNum" v-on:input="uppercase" disabled><br>

  <label for="street">Street:</label>
  <input type="text" v-on:input="uppercase" v-model.lazy="info.street" required disabled><br>

  <label for="purok">Purok:</label>
  <input type="text" v-on:input="uppercase" v-model.lazy="info.purok" required disabled><br>

  <label for="sitio">Sitio:</label>
  <input type="text" v-on:input="uppercase" v-model.lazy="info.sitio" required disabled><br>

  <label for="barangay">Barangay:</label>
  <input type="text" v-model="info.barangay" disabled><br>

  <label for="city">City:</label>
  <input type="text" v-model="info.city" disabled><br>

  <label for="province">Province:</label>
  <input type="text" v-model="info.province" disabled><br>

  <label for="region">Region:</label>
  <input type="text" v-model="info.region" disabled><br>

  <label for="householdNum">Household Number:</label>
  <input type="text" v-on:input="uppercase" v-model.lazy="info.householdNum" required disabled><br>

  <label for="houseHeadRelation">Relation to Household Head:</label>
  <input type="text" v-on:input="uppercase" v-model.lazy="info.houseHeadRelation" required disabled><br><br>

  <button type="button" v-on:click="postData" disabled>Submit</button>
  <div id="submitLabel">
    <p v-if="successSeen">Record submitted successfully.</p>
    <p v-if="failureSeen">Unable to submit record, please try again later.</p>
  </div>
</form>

<script>
  const info = {
    barangay: '{{ barangay }}',
    citizenship: '{{ citizenship }}',
    city: '{{ city }}',
    dob: '{{ dob }}',
    extName: '{{ extName }}',
    firstName: '{{ firstName }}',
    houseHeadRelation: '{{ houseHeadRelation }}',
    householdNum: '{{ householdNum }}',
    houseAddressNum: '{{ houseAddressNum }}',
    lastName: '{{ lastName }}',
    maritalStatus: '{{ maritalStatus }}',
    middleName: '{{ middleName }}',
    occupation: '{{ occupation }}',
    placeOfBirth: '{{ placeOfBirth }}',
    province: '{{ province }}',
    purok: '{{ purok }}',
    region: '{{ region }}',
    sex: '{{ sex }}',
    sitio: '{{ sitio }}',
    street: '{{ street }}',
  };
</script>